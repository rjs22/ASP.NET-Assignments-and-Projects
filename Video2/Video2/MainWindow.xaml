<Window x:Class="Video2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="txtInput" HorizontalAlignment="Left" Height="26" Margin="150,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <Label Content="Enter URL or Video ID" HorizontalAlignment="Left" Margin="0,133,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Download" Click="btnDownload" HorizontalAlignment="Left" Margin="430,133,0,0" VerticalAlignment="Top" Width="75" Height="26"/>

    </Grid>
</Window>
