<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="Paint" Height="500" Width="325" Background="#FFE47C7C">
    <Grid>
        <InkCanvas Name="icCanvas" Margin="10,10,10,75"/>
        
        <Button Name="btnClear" Click="btnClear_Click" Content="Clear" HorizontalAlignment="Left" Margin="10,421,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnClose" Click="btnClose_Click" Content="Close" HorizontalAlignment="Left" Margin="232,421,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnSave" Click="btnSave_Click" Content="Save" HorizontalAlignment="Left" Margin="155,421,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
